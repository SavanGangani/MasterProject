@model mvc.Models.tblUser
<style>
    .container {
        width: 50%;
        margin: 0 left;
        padding: 20px;
    }

    .k-form-group {
        margin-bottom: 20px;
    }
</style>

<div class="container">
    <h2>Login Form</h2>
    <form asp-action="Login" method="post">
        <div class="k-form-group">
            <input type="email" name="c_uemail" id="c_uemail" class="k-textbox" style="width: 100%" placeholder="Email">
        </div>
        <div class="k-form-group">
            <input type="password" name="c_password" id="c_password" class="k-textbox" style="width: 100%" placeholder="Password">
        </div>
        <button id="login" type="submit" class="k-button k-primary">Login</button>
        <p class="mt-3 text-center">Don't have an account? <a href="~/KendoComponentUser/Register">Register here</a></p>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(() => {
            $("#c_uemail").kendoTextBox({ type: "email" });
            $("#c_password").kendoTextBox({ type: "password" });
        });
    </script>
}