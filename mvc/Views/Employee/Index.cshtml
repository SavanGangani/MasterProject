@model List<tblEmployee>

@using System.IO

@{
    ViewData["Title"] = "Student Index";
}

<h2>List of Employee</h2>

<p>
    <a href="#" asp-action="Add">Add Employee</a>
</p>

<table>
    <thead>
        <tr>
            <td>Emplpyee Id</td>
            <td>Employee Name</td>
            <td>Gender</td>
            <td>Date of Birth</td>
            <td>Shift</td>
            <td>Image</td>
            <td>Department</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.c_empid</td>
                <td>@employee.c_empname</td>
                <td>@employee.c_empgender</td>
                <td>@employee.c_empdob.ToString("dd-MM-yyyy")</td>
                <td>@employee.c_empshift</td>
                <td>
                    <img src="@Url.Content(employee.c_empimg)" alt="Employee Photo" />
                </td>
                <td>@employee.c_empdepartment</td>
                <td>
                    <a asp-action="Details" asp-route-id="@employee.c_empid">Details</a>
                    <a asp-action="Edit" asp-route-id="@employee.c_empid">Edit</a>
                    <a asp-action="Delete" asp-route-id="@employee.c_empid" onclick="return confirm('Are you sure you want to delete this Employee?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>